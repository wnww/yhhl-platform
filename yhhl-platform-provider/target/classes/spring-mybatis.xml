		<property name="testWhileIdle" value="true" />

		<!-- é…ç½®é—´éš”å¤šä¹…æ‰è¿›è¡Œä¸€æ¬¡æ£€æµ‹ï¼Œæ£?µ‹éœ?¦å…³é—­çš„ç©ºé—²è¿žæŽ¥ï¼Œå•ä½æ˜¯æ¯«ç§?-->
		<property name="timeBetweenEvictionRunsMillis" value="60000" />
		<!-- é…ç½®ä¸?¸ªè¿žæŽ¥åœ¨æ± ä¸­æœ€å°ç”Ÿå­˜çš„æ—¶é—´ï¼Œå•ä½æ˜¯æ¯«ç§’ -->
		<property name="minEvictableIdleTimeMillis" value="25200000" />

		<!-- æ‰“å¼€removeAbandonedåŠŸèƒ½ -->
		<property name="removeAbandoned" value="true" />
		<!-- 1800ç§’ï¼Œä¹Ÿå°±æ˜?0åˆ†é’Ÿ -->
		<property name="removeAbandonedTimeout" value="1800" />
		<!-- å…³é—­abandedè¿žæŽ¥æ—¶è¾“å‡ºé”™è¯¯æ—¥å¿?-->
		<property name="logAbandoned" value="true" />

		<!-- ç›‘æŽ§æ•°æ®åº?-->
		<!-- <property name="filters" value="stat" /> -->
		<property name="filters" value="mergeStat" />
	</bean>

	<!-- myBatisæ–‡ä»¶ -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<!-- è‡ªåŠ¨æ‰«æentityç›®å½•, çœæŽ‰Configuration.xmlé‡Œçš„æ‰‹å·¥é…ç½® -->
		<property name="mapperLocations" value="classpath:/mapping/*.xml" />
		
	    <!-- typeAliasesPackageåŒ…è·¯å¾„é…ç½?-->
	    <!-- é…ç½®Mybatisçš„æ’ä»¶plugin-->
	    <property name="plugins">
	        <array>
	            <bean class="com.yhhl.interceptor.PageInterceptor">
	                <property name="properties">
	                    <value>
	                        databaseType=mysql
	                    </value>
	                </property>
	            </bean>
	        </array>
	    </property>
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
